<!DOCTYPE html>
<html lang="en">
    <%- include('partials/index') %>
    <body>
        <div class="row" style="height:40px;"><h2>Lista de productos</h2></div>
        <div class="row" style="height:65px;"><div class="col-sm-4"></div><%- mensaje %><div class="col-sm-4"></div> </div>
        <div class="row">
        <div class="col-sm-2"></div>
        <div class="col-sm-8">
            <table class="table table-dark">
                <% if(hayProductos){ %>
                <thead>
                    <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Precio</th>
                    <th scope="col">Imagen</th>
                    <th scope="col">Eliminar</th>
                    </tr>
                </thead>
                <tbody>
                    <% productList.forEach(function(item){ %>
                        <tr>
                            <td><%= item.id %></td>
                            <td><%= item.title %></td>
                            <td><%= item.price %></td>
                            <td><img src="<%= item.thumbnail %>" alt="<%= item.title %>" height="50"></td>
                            <th scope="row"><a href="/eliminar/<%= item.id %>">X</a></th>
                        </tr>
                    <% }); %>
                </tbody>
                <% }else{ %>
                <tbody>
                        <tr>
                            <td>No hay productos para mostrar</td>
                        </tr>
                </tbody>
                <% } %>
            </table>
            <a href="/agregar" class="btn btn-primary btn-sm active" role="button" aria-pressed="true">Agregar</a>
        </div>
        <div class="col-sm-2"></div>
        </div>
    </body>
</html>

