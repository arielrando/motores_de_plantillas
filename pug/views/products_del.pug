doctype html
html
  include layouts/index.pug
  body
    div(class="row" style="height:50px;")
      h2='Eliminar producto'
    div(class="row")
      div(class="col-sm-12 px-md-5")
        if product
          h3='Seguro desea eliminar el producto '+id+' ('+nombre+')'
          form(action="/eliminar" method="POST")
            input(type="hidden" name="idProduct" value=id)
            button(class="btn btn-primary btn-sm active mx-1" name="submit" value="S" type="submit")='Si'
            button(class="btn btn-danger btn-sm active" name="submit" value="S" type="submit")='No'
        else 
          h3='Dicho producto no existe'
        br
        a(href="/" class="btn btn-dark btn-sm active" role="button" aria-pressed="true")='Volver'