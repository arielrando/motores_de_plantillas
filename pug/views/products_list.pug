doctype html
html
  include layouts/index.pug
  body
    div(class="row" style="height:40px;")
        h2='Lista de productos'
    div(class="row" style="height:65px;")
        div(class="col-sm-4")
        div(class="col-sm-4") !{mensaje}
        div(class="col-sm-4")
    div(class="row" )
        div(class="col-sm-2")
        div(class="col-sm-8")
            table(class="table table-dark")
                if hayProductos
                    thead
                        tr
                            th(scope='col')='ID'
                            th(scope='col')='Nombre'
                            th(scope='col')='Precio'
                            th(scope='col')='Imagen'
                            th(scope='col')='Eliminar'
                    tbody 
                        each item in productList
                            tr
                                td=item.id
                                td=item.title
                                td=item.price
                                td
                                    img(src=item.thumbnail alt=item.title height="50")
                                td(scope="row")
                                    a(href="/eliminar/"+item.id)='X'
                else
                    tbody 
                        tr 
                            td='No hay productos para mostrar'
            a(href="/agregar" class="btn btn-primary btn-sm active" role="button" aria-pressed="true")='Agregar'
        div(class="col-sm-2")